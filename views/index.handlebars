<div class="container">

    <div class="jumbotron">
        <img src="..\assets\images\cheeseburger.png" alt="cheeseburger" />
        <h1>Have a Lovely Burger</h1>
    </div>




    <div class="row">


        <h2>What type of burger would you like to eat?</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="newburger" name="name">
            </div>


            <button type="submit">Add Burger</button>
        </form>
    </div>

    <div class="row">

        <div class="col-auto">
            <h2>Burgers waiting to be eaten:</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-auto">
            <h2>Burgers consumed:</h2>
        
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{>burgers/burger-block devoured=true}}
            {{/if}}
            {{/each}}
        </ul>
    </div>

</div>